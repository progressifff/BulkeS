<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:id="@+id/resumeGame"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="400dp"
            card_view:cardBackgroundColor = "@color/colorMarengo"
            card_view:cardCornerRadius="10dp"
            card_view:cardPreventCornerOverlap = "false"
            card_view:contentPadding = "40dp"
            style="@style/CardView"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
            <TextView
                android:id="@+id/info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f5f6f7"
                android:text="Game is on pause"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="30sp"
                android:autoText="false"/>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Button"
                    android:id="@+id/button"
                    android:layout_gravity="right"
                    android:layout_alignTop="@+id/info_text"
                    android:layout_toRightOf="@+id/info_text"
                    android:layout_toEndOf="@+id/info_text" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </FrameLayout>
</LinearLayout>