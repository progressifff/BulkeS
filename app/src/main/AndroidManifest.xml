<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bulkes.myapplication2"
    >
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <application
        android:hardwareAccelerated="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name="com.bulkes.myapplication2.MainMenuActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:screenOrientation="sensorLandscape"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateVisible|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.bulkes.myapplication2.GoGaming"
            android:theme="@style/AppTheme"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:screenOrientation="sensorLandscape"/>
        <activity android:name=".ProgressGraph"
            android:theme="@style/AppTheme"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:screenOrientation="sensorLandscape"/>
        <activity android:name=".GameSettings"
            android:theme="@style/AppTheme"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:screenOrientation="sensorLandscape"
            android:windowSoftInputMode="stateVisible|adjustResize"/>
        <activity android:name=".TestMySQL"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:screenOrientation="sensorLandscape"
            android:windowSoftInputMode="stateVisible|adjustResize"/>

        <activity android:name=".GameTable"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:screenOrientation="sensorLandscape"
            android:windowSoftInputMode="stateVisible|adjustResize"/>
    </application>

</manifest>
